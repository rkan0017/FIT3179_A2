
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data":{
        "url": "https://raw.githubusercontent.com/rkan0017/FIT3179_A2/main/WorldEnergyConsumption-Cleaned-V7.csv",
        "format":{
            "type": "csv",
            "parse": {
                "Population": "number",
                "Year": "number"
            }
        }
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 1992,
                "max": 2019,
                "step": 1,
                "name": "Year:  "
            }
        },
        {
            "name": "zoom_level",
            "value": 250
        },
        {
            "name": "center_to"
        }
            
    ],

    "title": "Total electricity produced per country annually",
    "width": 1200,
    "height": 900,
    
    "projection": {
        "type":"equirectangular",
        "center":{"expr": "center_to"},
        "scale":{"expr": "zoom_level"},
        "rotate":[-10,0]
    },
    
    "layer":[{
            "data": {
                "url": "https://raw.githubusercontent.com/rkan0017/FIT3179_A2/main/World_View_NoGraticules.json",
                "format":{"type": "topojson","feature": "ne_110m_admin_0_countries"}
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.NAME + ', ' + datum.properties.ISO_A3_EH",
                "as": "note"
            }],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke":"white"
            },
            "encoding": {"tooltip":{"field": "note"}}
        },
        {
            
            "transform":[
                {
                    "lookup":"Iso Code",
                    "from":{
                        "data": {
                            "url": "https://raw.githubusercontent.com/rkan0017/FIT3179_A2/main/World_View_NoGraticules.json",
                            "format":{
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        } ,
                        "key": "properties.ISO_A3_EH"                       
                    },
                    "as": "geo"
                },
            
                {"filter":"datum.Year == Year_selection"},
                {
                    "calculate": "datum['% Renewables'] + '%'",
                    "as": "note"
                }
            ],
            "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "field": "% Renewables", 
                    "type": "quantitative",
                    "scale":{
                        "domain":[
                            0,
                            100
                        ],
                        "scheme":"greens"
                    },
                    "legend": {"format": ".2s"}
                    },
                    "tooltip":[
                        {"field": "Country", "title": "Country"},
                        {"field": "note","title": "% Renewable"}]
                }
        }
    ]
}









