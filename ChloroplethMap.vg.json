
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": "Test",
    "width": 1800,
    "height": 800,

    "params": [
        {
            "name": "Year_selection",
            "value": 2020,
            "bind": {
                "input": "range",
                "min": 1991,
                "max": 2020,
                "step": 1,
                "name": "Year:  "
            }
        },
        {
            "name": "zoom_level",
            "value": 250,
            "bind": {
                "input": "range",
                "min": 250,
                "max": 1200,
                "step": 25,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [0,0],
            "bind": {
                "input": "select",
                "options": [
                    [0,0],
                    [15,0],
                    [70,35],
                    [130,-25],
                    [10,52],
                    [-110,45],
                    [-80,-23]
                ],
                "labels": ["World", "Africa", "Asia", "Australia", "Europe","North America", "South America"],
                "name": "Map Centre: "
            }
        }
    ],

    "projection": {
        "type":"equirectangular",
        "center":{"expr": "center_to"},
        "scale":{"expr": "zoom_level"},
        "rotate":[-10,0]
    },
    "data": {
        "url": "World_View_NoGraticules.json",
        "format":{"type": "topojson","feature": "ne_110m_admin_0_countries"}
    },

    "transform": [
        {
            "lookup": "properties.NAME",
            "from":{
                "data":{
                    "url": "https://github.com/rkan0017/FIT3179_A2/blob/ef33c31fa8764631a7e02bc33f1876ac7bf92147/World%20Energy%20Consumption%20-%20Cleaned%20-%20V2.csv"
                },
                "key": "Country",
                "fields": ["Population"]
            }
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "tooltip":{
            "field": "properties.NAME","type": "nominal","title":"Country"
        }
    }
    
}









