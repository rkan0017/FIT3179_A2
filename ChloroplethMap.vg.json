
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data":{
        "url": "WorldEnergyConsumption-Cleaned-V3.csv",
        "format":{
            "type": "csv",
            "parse": {
                "Population": "number",
                "Year": "number"
            }
        }
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 1992,
                "max": 2019,
                "step": 1,
                "name": "Year:  "
            }
        },
        {
            "name": "zoom_level",
            "value": 250,
            "bind": {
                "input": "range",
                "min": 250,
                "max": 1200,
                "step": 25,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [0,0],
            "bind": {
                "input": "select",
                "options": [
                    [0,0],
                    [15,0],
                    [70,35],
                    [130,-25],
                    [10,52],
                    [-110,45],
                    [-80,-23]
                ],
                "labels": ["World", "Africa", "Asia", "Oceania", "Europe","North America", "South America"],
                "name": "Map Centre: "
            }
        },
        {"name": "highlight", "select": {"type": "point", "on": "mouseover"}},
        {"name": "select", "select": "point"}
    ],

    
    "vconcat": [
        {
            
    
    "title": "% renewable electricity per country",
    "width": 1800,
    "height": 800,
    
    "projection": {
        "type":"equirectangular",
        "center":{"expr": "center_to"},
        "scale":{"expr": "zoom_level"},
        "rotate":[-10,0]
    },
    
    "layer":[{
            "data": {
                "url": "World_View_NoGraticules.json",
                "format":{"type": "topojson","feature": "ne_110m_admin_0_countries"}
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.NAME + ', ' + datum.properties.ISO_A3_EH",
                "as": "note"
            }],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke":"white"
            },
            "encoding": {"tooltip":{"field": "note"}}
        },
        {
            
            "transform":[
                {
                    "lookup":"Iso Code",
                    "from":{
                        "data": {
                            "url": "World_View_NoGraticules.json",
                            "format":{
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        } ,
                        "key": "properties.ISO_A3_EH"                       
                    },
                    "as": "geo"
                },
            
                {"filter":"datum.Year == Year_selection"},
                {
                    "calculate": "datum['% Renewables']",
                    "as": "note"
                }
            ],
            "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "field": "% Renewables", 
                    "type": "quantitative",
                    "scale":{
                        "domain":[
                            0,
                            100
                        ],
                        "scheme":"greens"
                    },
                    "legend": {"format": ".2s"}
                    },
                    "tooltip":[
                        {"field": "Country", "title": "Country"},
                        {"field": "note","title": "% Renewable"}],
                        "fillOpacity":{"condition":{"param": "select","value":1},"value":0.3}
                }
        }
    ]
        },
        {
            "title": { "text": "Most energy produced per capita" },     
            "width": 1800,
            "height": 800,
            "mark": "bar",
            "transform": [{"filter": "datum.Year == Year_selection"},{
                "window": [{
                  "op": "rank",
                  "as": "rank"
                }],
                "sort": [{ "field": "Total Energy per capita", "order": "descending" }]
              }, {
                "filter": "datum.rank <= 25"
              }],
            "encoding": {
                "x": { "field": "Country", "type": "nominal", "title":"Country","sort": "-y"},
                "y": { "field": "Total Energy per capita", "type": "quantitative", "title": null},
                "color":{"field": "Country"},
                "tooltip":[
                    {"field": "Total Energy per capita", "title": "Total energy produced per capita"}]
            
            }

        }
    ]
}









