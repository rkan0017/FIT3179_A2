
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data":{
        "url": "https://raw.githubusercontent.com/rkan0017/FIT3179_A2/main/WorldEnergyConsumption-Cleaned-V7.csv",
        "format":{
            "type": "csv",
            "parse": {
                "Population": "number",
                "Year": "number",
                "Fossil Electricity": "number",
                "Electricity Generation": "number"
            }
        }
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 1992,
                "max": 2019,
                "step": 1,
                "name": "Year:  "
            }
        }],

    "width": 700,
    "height": 300,

    "layer": [
        {
            
            "mark": "bar",
            "transform": 
            [
                {"filter": "datum.Year == Year_selection"},
                {
                    "window": 
                    [
                        {
                            "op": "rank",
                            "as": "rank"
                        }
                    ],
                    "sort": 
                    [
                        {
                            "field": "Fossil Electricity", "order": "descending" 
                        }
                    ]
                }, 
                {
                    "filter": "datum.rank <= 25"
                }
            ],
            "encoding": 
            {
                "y": { "field": "Country", "type": "nominal", "title":"Country","sort": "-x"},
                "x": { "field": "Fossil Electricity", "type": "quantitative", "title": null,"scale":{"domain": [0, 5500]},"axis":{"tickCount":10}},
                "color":{"field": "Country","legend":null},
                "tooltip":
                [
                    {"field": "Fossil Electricity", "title": "Electricity generated by fossil fuels (TWh)"}
                ]

            }
        }
    ],
    "config": {
        "style": {
          "cell": {
            "stroke": "transparent"
          }
        }
      }

}