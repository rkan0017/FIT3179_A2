
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data":{
        "url": "https://raw.githubusercontent.com/rkan0017/FIT3179_A2/main/WorldEnergyConsumption-Cleaned-V4.csv",
        "format":{
            "type": "csv",
            "parse": {
                "Population": "number",
                "Year": "number",
                "Total Energy per capita": "number"
            }
        }
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 1992,
                "max": 2019,
                "step": 1,
                "name": "Year:  "
            }
        }],

    "title": { "text": "Most energy produced per capita" },     
    "width": 1600,
    "height": 600,
    "mark": "bar",
    "transform": 
    [
        {"filter": "datum.Year == Year_selection"},
        {
            "window": 
            [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "sort": 
            [
                {
                    "field": "Total Energy per capita", "order": "descending" 
                }
            ]
        }, 
        {
            "filter": "datum.rank <= 25"
        }
    ],
    "encoding": 
    {
        "y": { "field": "Country", "type": "nominal", "title":"Country","sort": "-x"},
        "x": { "field": "Total Energy per capita", "type": "quantitative", "title": null,"scale":{"domain": [0, 60000]}},
        "color":{"field": "Country","legend":null,"sort":{"field": "Total Energy per capita", "order": "descending"}},
        "tooltip":
        [
            {"field": "Total Energy per capita", "title": "Total energy produced per capita"}
        ]
    
    }

}