
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data":{
        "url": "https://raw.githubusercontent.com/rkan0017/FIT3179_A2/main/WorldEnergyConsumption-Cleaned-V5.csv",
        "format":{
            "type": "csv",
            "parse": {
                "Population": "number",
                "Year": "number",
                "TotalEnergyperCapita(MWh)": "number"
            }
        }
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 1992,
                "max": 2019,
                "step": 1,
                "name": "Year:  "
            }
        }],

    "title": { "text": "Most energy produced per capita (MWh)" },     
    "width": 1600,
    "height": 600,

    "layer": [
        {
            
            "mark": "bar",
            "transform": 
            [
                {"filter": "datum.Year == Year_selection"},
                {
                    "window": 
                    [
                        {
                            "op": "rank",
                            "as": "rank"
                        }
                    ],
                    "sort": 
                    [
                        {
                            "field": "TotalEnergyperCapita(MWh)", "order": "descending" 
                        }
                    ]
                }, 
                {
                    "filter": "datum.rank <= 25"
                }
            ],
            "encoding": 
            {
                "y": { "field": "Country", "type": "nominal", "title":"Country","sort": "-x"},
                "x": { "field": "TotalEnergyperCapita(MWh)", "type": "quantitative", "title": null,"scale":{"domain": [0, 60]}},
                "color":{"field": "Country","legend":null,"sort":{"field": "TotalEnergyperCapita(MWh)", "order": "descending"}},
                "tooltip":
                [
                    {"field": "TotalEnergyperCapita(MWh)", "title": "Total energy produced per capita (MWh)"}
                ]

            }
        }
    ]

}